@model Kop.Web.Models.RegisterModel

@{
    ViewBag.Title = "註冊";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    <div style="padding:10px;" class="rounded_box2">
        <h3>注冊</h3>
        @Html.ValidationSummary()
        <div class="span-3">@Html.LabelFor(x => x.Name)</div>
        <div class="span-5">@Html.TextBoxFor(x => x.Name, new { @class = "span-5" })</div>
        <hr class="space" />
        <div class="span-3">@Html.LabelFor(x=>x.LoginName)</div>
        <div class="span-5">@Html.TextBoxFor(x=>x.LoginName, new {@class = "span-5"})</div>
        <hr class="space" />
        <div class="span-3">@Html.LabelFor(x => x.Password)</div>
        <div class="span-5">@Html.PasswordFor(x => x.Password, new { @class = "span-5" })</div>
        <hr class="space" />
        <div class="span-3">@Html.LabelFor(x => x.ConfirmPassword)</div>
        <div class="span-5">@Html.PasswordFor(x => x.ConfirmPassword, new { @class = "span-5" })</div>
        <hr class="space" />
        <div class="span-3">@Html.LabelFor(x => x.SelectedCountry)</div>
        <div class="span-5">@Html.DropDownListFor(x => x.SelectedCountry, Model.CountryList, "請選擇", new { @class = "span-5" })</div>
        <hr class="space" />
        <div class="span-3">&nbsp;</div>
        <div class="span-5">
            <input type="submit" value="注冊" />
        </div>
    </div>
}